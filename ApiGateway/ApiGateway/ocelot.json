      "DownstreamHostAndPorts": [
        {
          "Host": "event-service",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/event",
      "AuthenticationOptions": {
        "AuthenticationProviderkey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "ROLE_ADMIN"
      },
      "AddHeadersToRequest": {
        "profile-id": "Claims[id] > value"
      }
    },
