{
  "Routes": [
    {
      // auth/login and auth/register
      "UpstreamPathTemplate": "/api/auth-service/{everything}",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/user/{everything}"
    },
    {
